<application>
  <component name="ActionMacroManager">
    <macro name="NextError">
      <action id="GotoNextError" />
      <action id="ShowIntentionActions" />
    </macro>
    <macro name="PreviousError">
      <action id="GotoPreviousError" />
      <action id="ShowIntentionActions" />
    </macro>
    <macro name="NextErrorDescription">
      <action id="GotoNextError" />
      <action id="ShowErrorDescription" />
    </macro>
    <macro name="PreviousErrorDescription">
      <action id="GotoPreviousError" />
      <action id="ShowErrorDescription" />
    </macro>
  </component>
</application>